---
type Props = {
  title: string;
  desc: string;
  image: string;
  price?: string;
  tags?: string[];
  href: string;
};
const { title, desc, image, price, tags = [], href } = Astro.props;
---

<article
  class="rounded-2xl border border-zinc-200 dark:border-zinc-800 p-4 md:p-5 flex flex-col gap-3"
>
  <div class="w-full h-48 flex items-center justify-center bg-zinc-50 dark:bg-zinc-900 rounded-xl">
    <img
      src={image}
      alt={title}
      class="max-w-full max-h-full object-contain"
      loading="lazy"
    />
  </div>
  <div>
    <h3 class="font-semibold">{title}</h3>
    <p class="opacity-80 mt-1">{desc}</p>
    {price && <p class="mt-1 text-sm opacity-70">{price}</p>}
  </div>
  {
    tags.length > 0 && (
      <ul class="mt-auto flex flex-wrap gap-2">
        {tags.map((t) => (
          <li class="text-xs px-2 py-1 rounded-full border border-zinc-200 dark:border-zinc-700">
            {t}
          </li>
        ))}
      </ul>
    )
  }
  <a
    href={href}
    target="_blank"
    rel="sponsored noopener"
    class="mt-3 inline-flex items-center justify-center px-4 py-2 rounded-xl bg-zinc-900 text-white dark:bg-white dark:text-zinc-900 hover:opacity-90"
    >Buy / Learn more</a
  >
</article>